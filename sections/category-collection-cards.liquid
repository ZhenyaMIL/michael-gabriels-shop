<section id="section-{{ section.id }}" class="CollectionCardsSection section-{{ section.id }}">
    <div class="CollectionCardsSectionWrap">
        <div class="ContainerCentered">
            {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.content != blank -%}
                <header class="SectionHeader BlockIdent TextCenter">
                    {%- if section.settings.subheading != blank -%}
                        <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
                    {%- endif -%}

                    {%- if section.settings.title != blank -%}
                        <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
                    {%- endif -%}

                    {%- if section.settings.content != blank -%}
                        <div class="SectionHeader__Description SectionHeader__Description--Center Rte">
                            {{ section.settings.content }}
                        </div>
                    {%- endif -%}
                </header>
            {%- endif -%}
            <div class="CollectionCards">
                {% for block in section.blocks %}
                    <div class="CollectionCards__Item BlockIndent">
                        <div class="CollectionCards_Background " {%- if block.settings.image_background != blank -%}  style="background-image: url('{{ block.settings.image_background | img_url: '1000x' }}')" {%- endif -%}>
                            {%- if block.settings.image != blank -%}
                                <div class="CollectionCards__ImageWrap">
                                    <div class="CollectionCards__Image"
                                         style="background-image: url('{{ block.settings.image | img_url: '1000x' }}')"></div>
                                </div>
                            {%- endif -%}
                            {%- if block.settings.title != blank -%}
                                <div class="CollectionCards__Title Heading">{{ block.settings.title }}</div>
                            {%- endif -%}
                            {%- if block.settings.content != blank -%}
                                <div class="CollectionCards__Content">
                                    {{ block.settings.content }}
                                </div>
                            {%- endif -%}
                            {%- if block.settings.url_title != blank -%}
                                <div class="CollectionCards__Link"><a class="Link Link--center  Link--underline"
                                                                   href="{{ block.settings.url }}">{{ block.settings.url_title }}</a>
                                </div>
                            {%- endif -%}
                        </div>
                    </div>
                {% endfor %}
            </div>
            {%- if section.settings.url_title != blank -%}
                <div class="CollectionCardsSectionLink">
                    <a class="Button Button--primary"
                       href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
                </div>
            {%- endif -%}
        </div>
    </div>
</section>
<style>
    .CollectionCardsSectionWrap {
        padding: 50px 0 50px;
    }

    .CollectionCardsSectionWrap--Background {
        background-color: #FBF8F3;
    }

    @media (min-width: 981px) {
        .CollectionCardsSectionWrap {
            padding: 60px 0 60px;
        }

        .CollectionCards_Background {
        }
    }

    .CollectionCards_Background {
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
        background-color: #f3f3f3;
    }

    .CollectionCards {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }

    .CollectionCards__Item {
        flex-basis: 350px;
        margin-bottom: 20px;
        padding: 0 1%;
        flex-grow: 1;
        text-align: center;
    }
    @media (max-width: 510px) {
        .CollectionCards__Item {
            flex-basis: 220px;
            margin-bottom: 20px;
            padding: 0;
            flex-grow: 1;
            text-align: center;
        }
        .CollectionCards__ImageWrap {
            width: 100%;
            min-width: 220px;
            min-height: 220px;
            margin: 10px auto 20px;
        }
        .CollectionCards_Background {
            padding: 5px 15px 30px;
        }
    }

    @media (min-width: 981px) {
        .CollectionCards__Item {
            flex-basis: 210px;
        }
    }

    .CollectionCards__Title {
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .CollectionCards__Content {
        margin-bottom: 20px;
    }

    .CollectionCards__ImageWrap {
        position: relative;
        display: block;
        width: 100%;
        min-width: 310px;
        min-height: 160px;
        margin-bottom:50px;
    }

    .CollectionCards__Image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
    }
  .CollectionCards__Title, .CollectionCards__Content, .CollectionCards__Link {
    padding-left: 40px;
    padding-right: 40px;
    margin-bottom: 50px;
  }

    .CollectionCards__Link {
      margin-bottom: 50px;
    }

    .CollectionCardsSectionLink .CollectionCards__Link {
        text-decoration: none;
    }

    .SectionHeader__Description--Center {
        margin-left: auto;
        margin-right: auto;
    }

    .CollectionCardsSectionLink {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 40px;
    }
</style>
{% schema %}
{
  "name": "Cards 1/3",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Sub-heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Content for section</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "max_blocks": 4,
  "blocks": [
    {
      "name": "Card",
      "type": "block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
          "info": "400 x 400px .png recommended"
        },
        {
          "type": "image_picker",
          "id": "image_background",
          "label": "Background image",
          "info": "460 x 600px .png recommended"
        },

        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Content</p>"
        },
        {
          "type": "text",
          "id": "url_title",
          "label": "Link title",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}