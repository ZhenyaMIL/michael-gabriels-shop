<section id="section-{{ section.id }}" class="CardsSection section-{{ section.id }}">
    <div class="CardsSectionWrap">
        <div class="ContainerCentered">
            {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.content != blank -%}
                <header class="SectionHeader BlockIdent TextCenter">
                    {%- if section.settings.subheading != blank -%}
                        <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
                    {%- endif -%}

                    {%- if section.settings.title != blank -%}
                        <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
                    {%- endif -%}

                    {%- if section.settings.content != blank -%}
                        <div class="SectionHeader__Description SectionHeader__Description--Center Rte">
                            {{ section.settings.content }}
                        </div>
                    {%- endif -%}
                </header>
            {%- endif -%}
            <div class="Cards">
                {% for block in section.blocks %}
                    <div class="Cards__Item BlockIndent">
                        <div class="Cards__ImageWrap">
                            <div class="Cards__Image"
                                 style="background-image: url('{{ block.settings.image | img_url: '1000x' }}')"></div>
                        </div>
                        <div class="Cards__Title Heading">{{ block.settings.title }}</div>
                        <div class="Cards__Link"><a class="Link Link--center"
                                                    href="{{ block.settings.url }}">{{ block.settings.url_title }}</a>
                        </div>
                                              <div class="Cards__Content">
                            {{ block.settings.content }}
                        </div>
                    </div>
                {% endfor %}
            </div>
          {%- if section.settings.button_label != blank -%}
            <div class="CardsSectionLink">
                <a class="Button Button--primary"
                   href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
            </div>
          {%- endif -%}
        </div>
    </div>
</section>
<style>
    .CardsSectionWrap {
        padding: 50px 0 50px;
    }
    .CardsSectionWrap--Background {
        background-color: #FBF8F3;
    }
    @media (min-width: 981px) {
        .CardsSectionWrap {
            padding: 60px 0 60px;
        }
    }
    .Cards {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }
    .Cards__Item {
        flex-basis: 300px;
        margin-bottom: 20px;
        padding: 0 2%;
        flex-grow: 1;
        text-align: center;
    }
    @media (min-width: 981px) {
        .Cards__Item {
            flex-basis: 210px;
        }
    }
    .Cards__Title {
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 20px;
        font-weight: bold;
    }
    .Cards__Content {
        margin-bottom: 20px;
    }
    .Cards__ImageWrap {
        position: relative;
        display: block;
        width: 100%;
        min-height: 250px;
        max-width: 300px;
        margin: 25px auto;
    }
    .Cards__Image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
    }
    .Cards__Link {
        font-weight: bold;
    }
    .CardsSectionLink .Cards__Link {
        text-decoration: none;
    }
    .SectionHeader__Description--Center {
        margin-left: auto;
        margin-right: auto;
    }
    .CardsSectionLink {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 40px;
    }
</style>
