<section id="section-{{ section.id }}" class="Section--spacingNormal">
    <div class="ContainerCentered ContainerFlex">
        <div class="ThinColumn">
            <div class="ThinColumnWrap ColumnWrap--{% if section.settings.background == true %}Background{% endif %}">
                {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.content != blank -%}
                    <header class="SectionHeader LogoHeader BlockIdent">
                        {%- if section.settings.subheading != blank -%}
                            <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
                        {%- endif -%}

                        {%- if section.settings.title != blank -%}
                            <p class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</p>
                        {%- endif -%}

                        {%- if section.settings.content != blank -%}
                            <div class="SectionHeader__Description Rte">
                                {{ section.settings.content }}
                            </div>
                        {%- endif -%}
                    </header>
                    <div class="IconText">
                        {% for block in section.blocks %}
                            {% assign icon = block.settings.icon %}
                            <div class="IconText__Item">
                                <div class="IconText__Icon">{%- render 'icon', icon: icon -%}
                                </div>
                                <div class="IconText__Title">
                                    <a href="{{ block.settings.i_link | escape }}">{{ block.settings.i_title | escape }}</a>
                                </div>
                                <div class="IconText__Content">
                                    {{ block.settings.i_content | escape }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {%- endif -%}
            </div>
        </div>
        <div class="WideColumn">
            {% render 'banner-block' %}
        </div>
    </div>
</section>

<style>
    .ContainerCentered--Flex {
        display: flex;
    }
    .WideColumn {
        flex-grow: 1;
    }
    .ThinColumn {
        flex-grow: 1;
    }
    .ImageHero--Wrap {
        width: 100%;
    }
    .ImageHero__Content {
        position: relative;
        flex-basis: auto;
        padding: 20px 40px 10px 40px;
    }
    .SectionHeader {
        margin-bottom: 25px;
    }
    .ImageHero--ContentRight{
        text-align: right;
        height: 100%;
        align-items: initial;
        justify-content: flex-end;
    }
    .SectionHeader.SectionHeader--MiddleIndent {
        margin-bottom: 30px;
    }
    .ImageHero__Content .ImageHero__Content--Image {
        padding: 0;
    }
    .ThinColumnWrap {
        width: 100%;
        padding: 40px 10%;

    }
    .ColumnWrap--Background {
        background-color: #F6F6F6;
        padding: 20px 40px 10px 40px;
    }

    @media (min-width: 981px) {
        .ColumnWrap--Background {
            padding: 40px 80px 20px 80px;
        }
        .ThinColumnWrap {
            width: 100%;
            padding: 40px 15%;

        }
    }
    .IconText__Item {
        position: relative;
        display: block;
        padding-left: 60px;
        margin-bottom: 30px;
    }
    .IconText__Title {
        text-transform: uppercase;
        font-size: 1.2em;
    }
    .IconText__Icon {
        display: block;
        position: absolute;
        top: 0px;
        left: 0px;
        bottom: 0px;
        width: 40px;
    }
    .IconText__Icon .Icon {
        height: 24px;
        width: 24px;
        fill: #D7C893;
    }
    .LogoHeader {
        position: relative;
        padding-left: 80px;
    }
    .LogoHeader .SectionHeader__Heading {
        text-transform: uppercase;
        max-width: 200px;
        line-height: 1.4;
    }
    .LogoHeader:before {
        content: "";
        background-image: url('{{ 'logo.png' | asset_url }}');
        position: absolute;
        display: block;
        background-size: cover;
        background-repeat: no-repeat;
        height: 80px;
        width: 80px;
        left: -25px;
        top: -8px;
        text-transform: uppercase;
    }
    .SectionHeader__Link {
        padding: 40px 0;
    }
</style>

