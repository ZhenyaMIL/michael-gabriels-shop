          "label": "Title",
          "default": "Title"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon name",
          "default": "check"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link name"
        },
        {
          "type": "textarea",
          "id": "i_content",
          "label": "Content",
          "default": "Text content"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Blocks",
      "name": "Columns",
      "settings": {}
    }
  ]
}
{% endschema %}

