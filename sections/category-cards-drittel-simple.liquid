<section id="section-{{ section.id }}" class="CardsDrittelSection section-{{ section.id }}">
    <div class="CardsDrittelSectionWrap">
        <div class="ContainerCentered">
            {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.content != blank -%}
                <header class="SectionHeader BlockIdent TextCenter">
                    {%- if section.settings.subheading != blank -%}
                        <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
                    {%- endif -%}

                    {%- if section.settings.title != blank -%}
                        <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
                    {%- endif -%}

                    {%- if section.settings.content != blank -%}
                        <div class="SectionHeader__Description SectionHeader__Description--Center Rte">
                            {{ section.settings.content }}
                        </div>
                    {%- endif -%}
                </header>
            {%- endif -%}
            <div class="CardsDrittel">
                {% for block in section.blocks %}
                    <div class="CardsDrittel__Item BlockIndent">
                        <div class="CardsDrittel_Background " {%- if block.settings.image_background != blank -%}  style="background-image: url('{{ block.settings.image_background | img_url: '1000x' }}')" {%- endif -%}>
                            {%- if block.settings.image != blank -%}
                                <div class="CardsDrittel__ImageWrap">
                                    <div class="CardsDrittel__Image"
                                         style="background-image: url('{{ block.settings.image | img_url: '1000x' }}')"></div>
                                </div>
                            {%- endif -%}
                            {%- if block.settings.title != blank -%}
                                <div class="CardsDrittel__Title Heading">{{ block.settings.title }}</div>
                            {%- endif -%}
                            {%- if block.settings.content != blank -%}
                                <div class="CardsDrittel__Content">
                                    {{ block.settings.content }}
                                </div>
                            {%- endif -%}
                            {%- if block.settings.url_title != blank -%}
                                <div class="CardsDrittel__Link"><a class="Link Link--center  Link--underline"
                                                                   href="{{ block.settings.url }}">{{ block.settings.url_title }}</a>
                                </div>
                            {%- endif -%}
                        </div>
                    </div>
                {% endfor %}
            </div>
            {%- if section.settings.url_title != blank -%}
                <div class="CardsDrittelSectionLink">
                    <a class="Button Button--primary"
                       href="{{ section.settings.button_link }}">{{ section.settings.button_label }}</a>
                </div>
            {%- endif -%}
        </div>
    </div>
</section>
<style>
    .CardsDrittelSectionWrap {
        padding: 50px 0 50px;
    }

    .CardsDrittelSectionWrap--Background {
        background-color: #FBF8F3;
    }

    @media (min-width: 981px) {
        .CardsDrittelSectionWrap {
            padding: 60px 0 60px;
        }

        .CardsDrittel_Background {
            padding: 40px;
        }
    }

    .CardsDrittel_Background {
        padding: 20px 20px 40px;
        background-repeat: no-repeat;
        background-size: cover;
        height: 100%;
        background-color: #f3f3f3;
    }

    .CardsDrittel {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
    }

    .CardsDrittel__Item {
        flex-basis: 350px;
        margin-bottom: 20px;
        padding: 0 1%;
        flex-grow: 1;
        text-align: center;
    }
  @media (max-width: 510px) {
      .CardsDrittel__Item {
        flex-basis: 220px;
        margin-bottom: 20px;
        padding: 0;
        flex-grow: 1;
        text-align: center;
    }
    .CardsDrittel__ImageWrap {
    width: 100%;
    min-width: 220px;
    min-height: 220px;
    margin: 10px auto 20px;
}
    .CardsDrittel_Background {
    padding: 5px 15px 30px;
    }
  }

    @media (min-width: 981px) {
        .CardsDrittel__Item {
            flex-basis: 210px;
        }
    }

    .CardsDrittel__Title {
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 20px;
        font-weight: bold;
    }

    .CardsDrittel__Content {
        margin-bottom: 20px;
    }

    .CardsDrittel__ImageWrap {
        position: relative;
        display: block;
        width: 100%;
        min-width: 310px;
        min-height: 330px;
        max-width: 340px;
        margin: 20px auto 40px;
    }

    .CardsDrittel__Image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        box-shadow: 0 0 40px rgba(0, 0, 0, 0.2);
    }

    .CardsDrittel__Link {

    }

    .CardsDrittelSectionLink .CardsDrittel__Link {
        text-decoration: none;
    }

    .SectionHeader__Description--Center {
        margin-left: auto;
        margin-right: auto;
    }

    .CardsDrittelSectionLink {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 40px;
    }

</style>
