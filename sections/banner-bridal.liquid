<section id="section-{{ section.id }}" class="BlockIdent">
{% render 'banner-fullscreen' %}
</section>

{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Top section image",
      "info": "1920 x 800px .png recommended"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading",
      "default": "Sub-heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Content for section</p>"
    },
    {
      "type": "text",
      "id": "link_title",
      "label": "Link Title",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "link",
      "label": "Link"
    },
    {
      "type": "select",
      "id": "align",
      "label": "Banner content alignment",
      "options": [
        {
          "value": "Left",
          "label": "Left"
        },
        {
          "value": "Right",
          "label": "Right"
        },
        {
          "value": "Center",
          "label": "Center"
        }
      ],
      "default": "Left"
    },
    {
      "type": "select",
      "id": "content_color",
      "label": "Content color",
      "options": [
        {
          "value": "Dark",
          "label": "Dark"
        },
        {
          "value": "Light",
          "label": "Light"
        }
      ],
      "default": "Light"
    }
  ]
}
{% endschema %}
{% javascript %}
{% endjavascript %}


