<section id="section-{{ section.id }}">
    <div class="ShopImage" >
        <div class="ShopImage__Image" style="background-image: url('{{ section.settings.image | img_url: 'master'  }}')">
        </div>
    </div>
    <div class="TextColumnWrap TextColumnWrap--{% if section.settings.background == true %}Background{% endif %}">
        <div class="ContainerCentered">
            {%- if section.settings.subheading != blank or section.settings.title != blank or section.settings.content != blank -%}
                <header class="SectionHeader ContentCenter TextCenter">
                    {%- if section.settings.subheading != blank -%}
                        <p class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</p>
                    {%- endif -%}

                    {%- if section.settings.title != blank -%}
                        <p class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</p>
                    {%- endif -%}

                    {%- if section.settings.content != blank -%}
                        <div class="SectionHeader__Description TextCenter Rte">
                            {{ section.settings.content }}
                        </div>
                    {%- endif -%}
                </header>
            {%- endif -%}
            <div class="ShopBlocks">
                {% for block in section.blocks %}
                    <div class="ShopBlocks__Item BlockIndent">
                        <div class="ShopBlocks__Subheading Heading">{{ block.settings.subtitle }}</div>
                        <div class="ShopBlocks__Title Heading">{{ block.settings.title }}</div>
                        <div class="ShopBlocks__Content">
                            {{ block.settings.content }}
                        </div>
                        <div class="ShopBlocks__Link"><a class="Link Link--center"
                                                         href="{{ block.settings.url }}">{{ block.settings.url_title }}</a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<style>
    .ContainerCentered--Flex {
        display: flex;
    }
    .SectionHeader.ContentCenter {
        display: flex;
        align-items: center;
        flex-direction: column;
        margin-bottom: 25px;
    }
    .SectionHeader__Description.TextCenter {
        max-width: 800px;
    }
    .SectionHeader.SectionHeader--MiddleIndent {
        margin-bottom: 30px;
    }
    .TextColumnWrap {
        width: 100%;
        padding: 40px 20px;
    }
    .TextColumnWrap--Background {
        background-color: #fbf8f3;
    }
    @media (min-width: 981px) {
        .TextColumnWrap {
            padding: 80px 60px;
        }
    }
    .ShopImage {
        position: relative;
        display: block;
        height: 200px;
        max-width: 415px;
        margin: 0 auto;
    }
    .ShopImage__Image {
        position: absolute;
        top: 60px;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
    }
    .ShopBlocks {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        max-width: 980px;
        margin: 0 auto;
    }
    .ShopBlocks__Item {
        flex-basis: 300px;
        margin-bottom: 20px;
        padding: 0 2%;
        flex-grow: 1;
        text-align: center;
        background-color: #E7DBCD;
        padding: 50px 20px 30px;
        margin: 0 10px;
        min-height: 280px;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
    @media (min-width: 981px) {
        .ShopBlocks__Item {
            flex-basis: 210px;
        }
    }
    .ShopBlocks__Title {
        text-align: center;
        text-transform: uppercase;
        margin-bottom: 20px;
        font-weight: bold;
    }
    .ShopBlocks__Content {
        margin-bottom: 20px;
    }
    .ShopBlocks__ImageWrap {
        position: relative;
        display: block;
        width: 100%;
        min-height: 250px;
        max-width: 300px;
        margin: 25px auto;
    }
    .ShopBlocks__Image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
    }
    .ShopBlocks__Link {
        font-weight: bold;
    }
    .ShopBlocksSectionLink .ShopBlocks__Link {
        text-decoration: none;
    }
    .SectionHeader__Description--Center {
        margin-left: auto;
        margin-right: auto;
    }
    .ShopBlocksSectionLink {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-top: 40px;
    }
</style>
{% schema %}
{
  "name": "Get Started",

  "max_blocks": 2,
  "blocks": [
    {
      "name": "Option",
      "type": "block",
      "settings": [
        {
          "type": "text",
          "id": "subtitle",
          "label": "Sub Title",
          "default": "Sub Title"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Content</p>"
        },
        {
          "type": "text",
          "id": "url_title",
          "label": "Link title",
          "default": "Learn More"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ],
  "settings": [
    {
       "type": "image_picker",
       "id": "image",
       "label": "Top section image",
       "info": "400 x 400px .png recommended"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Sub-heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Tell your story"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Text",
      "default": "<p>Add your own custom content to give more information about your store, availability details...</p>"
    },
    {
      "type": "checkbox",
      "id": "background",
      "label": "Show content with background",
      "default": false
    }
  ],
  "presets": [
    {
      "category": "Blocks",
      "name": "Text",
      "settings": {}
    }
  ]
}
{% endschema %}

